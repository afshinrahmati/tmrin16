<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>companys</title>


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/login.css">
</head>

<body>


    <div class="form-group">
        <input type="text" class="form-control" id="d1" placeholder="NAMECOMPANY" name="email">
        <input type="number" class="form-control" id="d2" placeholder="codePost" name="pwd">
        <input type="text" class="form-control" id="d3" placeholder="nameBoss" name="pwd">
        <input type="text" class="form-control" id="d4" placeholder="Phonenumber" name="pwd">


        <button type="submit" id="add" class="btn btn-default">Submit</button>
        </form>
    </div>
    <!--اسامی ها-->
    <!-- On rows -->


    <table class="table table-striped table-dark" id="table">
        <thead>
            <tr>

                <th scope="col">NAMECOMPANY</th>
                <th scope="col">CodePoste</th>
                <th scope="col">NameBoss</th>
                <th scope="col">Phonenumber</th>
                <th scope="col">DataTime</th>
                <th scope="col">Delete</th>
                <th scope="col">EDibt</th>
            </tr>
            <% for(let i=0;i<Company.length;i++){ %>

                <tr>
                    <th>
                        <%= Company[i].NAMECOMPANY %>
                    </th>
                    <th>
                        <%= Company[i].codePost %>
                    </th>
                    <th>
                        <%= Company[i].nameBoss %>
                    </th>
                    <th>
                        <%= Company[i].Phonenumber %>
                    </th>
                    <th>
                        <%= Company[i].createdAt %>
                    </th>
                    <th>

                        <button class="rem" id="<%=Company[i]._id  %> ">Delete</button>

                    </th>

                </tr>
                <% } %>
        </thead>
        <tbody>


        </tbody>
    </table>
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>


    <Script>
        $(function() {

            $(".rem").on("click", function(a) {

                $.ajax({
                    type: 'delete',
                    url: "/delet/" + a.currentTarget.id,
                    contentType: 'application/json',
                    data: JSON.stringify({
                        "NAMECOMPANY": d1,
                        "codePost": d2,
                        "nameBoss": d3,
                        "Phonenumber": d4
                    }),
                    success: function(src) {
                        //delet
                        alert("موفقیت امیز بود")
                        location.reload(30);
                        $("input").val();
                    },
                    err: function(err) {
                        console.log(err);

                    }
                })
            });
        });
        $("#add").on("click", function() {
            let d1 = $("#d1").val();
            let d2 = $("#d2").val();
            let d3 = $("#d3").val();
            let d4 = $("#d4").val();
            if (d2 === "" && d1 === "" || d3 === "" || d4 === "") {
                alert("قسممتی از فایل خالی است")
            }
            $.post({
                url: "/login",
                contentType: 'application/json',
                data: JSON.stringify({
                    "NAMECOMPANY": d1,
                    "codePost": d2,
                    "nameBoss": d3,
                    "Phonenumber": d4
                }),
                success: function(src) {
                    //delet
                    alert("موفقیت امیز بود")
                    location.reload(30);
                    $("input").val();
                },
                err: function(err) {
                    console.log(err);

                }
            })
        });
    </Script>
</body>


</html>